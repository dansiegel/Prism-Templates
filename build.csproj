<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard1.0</TargetFramework>
        <NuspecFile>$(MSBuildThisFileDirectory)\Templates.nuspec</NuspecFile>
        <EnableDefaultItems>false</EnableDefaultItems>
        <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
        <EnableDefaultNoneItems>false</EnableDefaultNoneItems>
        <!-- <Authors>Dan Siegel</Authors>
        <Copyright>Â© Dan Siegel</Copyright> -->
        <VersionPrefix>1.4.0</VersionPrefix>
        <VersionPrefix Condition=" '$(RELEASEVERSION)' != '' ">$(RELEASEVERSION)</VersionPrefix>
        <VersionSuffix Condition=" '$(BUILD_BUILDNUMBER)' != '' And '$(Is_Release)' != 'true' ">ci$(BUILD_BUILDNUMBER)</VersionSuffix>
        <!-- <PackageId>Prism.Forms.QuickstartTemplates</PackageId>
        <Title>Prism QuickStart Templates</Title>
        <PackageTags>dotnet;xamarin;android;ios;uwp;prism;dryioc;autofac;unity;ninject;realm;azure;azuread;offline sync;mobile center;</PackageTags> -->
        <!-- <PackageIconUrl>http://prismlibrary.github.io/images/prism-logo-graphic-128.png</PackageIconUrl>
        <PackageLicenseUrl>https://github.com/dansiegel/Prism-Templates/blob/master/LICENSE</PackageLicenseUrl>
        <PackageProjectUrl>https://github.com/dansiegel/Prism-Templates</PackageProjectUrl> -->
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <NoPackageAnalysis>true</NoPackageAnalysis>
        <!-- <PackageType>Template</PackageType> -->
        <PackageOutputPath>$(MSBuildThisFileDirectory)</PackageOutputPath>
        <PackageOutputPath Condition=" '$(BUILD_ARTIFACTSTAGINGDIRECTORY)' != '' ">$(BUILD_ARTIFACTSTAGINGDIRECTORY)</PackageOutputPath>
        <NuSpecPackageVersion>$(VersionPrefix)</NuSpecPackageVersion>
        <NuSpecPackageVersion Condition=" '$(VersionSuffix)' != '' ">$(VersionPrefix)-$(VersionSuffix)</NuSpecPackageVersion>
        <NuspecProperties>version=$(NuSpecPackageVersion);</NuspecProperties>
    </PropertyGroup>

    <Target Name="_GeneratedNuGetVersion"
            AfterTargets="GenerateNuspec">
        <Copy SourceFiles="Prism.Forms.QuickstartTemplates.$(NuSpecPackageVersion).nupkg"
              DestinationFiles="TemplatePack-Mac/Prism.QuickStart.TemplatePack/Prism.Forms.QuickstartTemplates.nupkg" />
        <!-- <Exec Command="echo '$(NuSpecPackageVersion)' | tee TemplatePack-Mac/generatedVersion" /> -->
    </Target>

